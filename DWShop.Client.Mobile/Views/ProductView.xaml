<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DWShop.Client.Mobile.Views.ProductView"
             Title="ProductView">
    <VerticalStackLayout>
        <Image Source="{Binding ProductModel.PhotoURL}" HeightRequest="300"/>

        <Label Text="{Binding ProductModel.ProductName}"  Margin="10"/>

        <Label Text="{Binding ProductModel.Price}"  Margin="10"/>

        <Button Text="Agregar a canasta"/>

        <Button Text="Tomar foto"/>

    </VerticalStackLayout>
</ContentPage>
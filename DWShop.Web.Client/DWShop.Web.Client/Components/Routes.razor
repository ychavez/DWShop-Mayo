
@using DWShop.Web.Client.Client.Pages
@using DWShop.Web.Client.Components.Layout

<CascadingAuthenticationState>


<Router AppAssembly="@typeof(Program).Assembly"
        AdditionalAssemblies="new[] { typeof(Client._Imports).Assembly}">
    <Found Context="routerData" >
        <AuthorizeRouteView RouteData="routerData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <Login></Login>
            </NotAuthorized>
            
            </AuthorizeRouteView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p> no hay nada aqui</p>
        </LayoutView>

    </NotFound>

</Router>

</CascadingAuthenticationState>